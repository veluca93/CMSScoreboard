<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Action bar toolbar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/custom_action_bar"
            app:theme="@style/ToolBarStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/cms_color" />
        <ProgressBar
            android:id="@+id/scoreboard_loading_spinner"
            android:indeterminate="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
        </ProgressBar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:id="@+id/scoreboard_error"
            android:visibility="gone"
            android:padding="10dp"/>
        <ListView
            android:id="@+id/contestants"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:persistentDrawingCache="scrolling">
        </ListView>
    </LinearLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background_material_light"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
        <ImageView
            android:layout_width="match_parent"
            android:maxWidth="240dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cms_big"
            android:paddingTop="10dp"/>
        <include layout="@layout/divider"/>
        <ListView android:id="@+id/scoreboards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"/>
        <include layout="@layout/divider"/>
        <ListView android:id="@+id/drawer_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@android:color/transparent"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout><!-- From: file:/C:/Users/Gaspare/android%20Studio/CMSScoreboard/app/src/main/res/layout/activity_scoreboard.xml -->